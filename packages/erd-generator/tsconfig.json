{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es6", "dom"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/webview.ts",
    "example.ts",
    "example-save.ts",
    "example-standalone.ts",
    "example-minimal-integration.ts",
    "cli.ts"
  ]
}
